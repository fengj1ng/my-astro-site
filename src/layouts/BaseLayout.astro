---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-size: 17px;
		font-family: Times, serif;
	}
	body {
		width: 100vw; /* to ensure scrollbar doesn't influence widths */
		margin: 0;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Helvetica Neue', sans-serif;
	}
	p {
		line-height: 1.3em;
	}
	a {
		padding-bottom: 1px;

		color: inherit;
		text-decoration: none;
		border-bottom: 0.1em solid rgba(0, 0, 255, 0.7);
		transition: padding-bottom 100ms, border-color 100ms;
	}
	a:hover {
		border-color: rgba(0, 0, 0, 0.3);
	}
	.switch {
		padding-bottom: 1px;

		cursor: pointer;
		border-bottom: 0.1em solid;
		transition: padding-bottom 100ms, border-color 100ms;
	}
	.switch.off {
		border-color: rgba(0, 0, 0, 0.3);
	}
	.switch.on, .switch.off:hover {
		border-color: rgba(255, 0, 0, 0.7);
	}
</style>
